---
import "../styles/global.css";
import { t, type Lang } from "../i18n/i18n";
import { CATEGORIES, categoryLabel, type Category } from "../lib/categories";
import { href } from "../lib/href";
import Icon from "../components/Icon.astro";

type Props = {
  lang: Lang;
  title?: string;
  description?: string;
  currentCategory?: Category;
  currentPath?: string;
  currentPostId?: string;
};

const { lang, title, description, currentCategory, currentPath, currentPostId } = Astro.props;

const htmlLang = lang === "ja" ? "ja" : "zh-Hans";
const pageTitle = title ? `${title} · ${t(lang, "site.name")}` : t(lang, "site.name");
const pageDescription = description ?? t(lang, "site.tagline");

function withLang(path: string): string {
  return href(`/${lang}${path}`);
}

const otherLang = lang === "zh" ? "ja" : "zh";
const langSwitchHref = href(`/${otherLang}${currentPath ?? "/"}`);

const isBookmarks = currentPath === "/bookmarks/";
const isStatus = currentPath === "/status/";
const isAbout = currentPath === "/about/";
const isLatest = currentPath === "/" || currentPath?.startsWith("/c/") === true;
---

<!doctype html>
<html lang={htmlLang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="view-transition" content="same-origin" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <link rel="alternate" type="application/rss+xml" title={lang === "ja" ? "ACGレーダー RSS" : "ACG Radar RSS"} href={withLang("/feed.xml")} />
    <meta name="theme-color" content="#f2f4f8" />
    <script is:inline>
      (() => {
        const el = document.documentElement;
        let device = "desktop";

        try {
          const screenShortSide = window.screen ? Math.min(window.screen.width, window.screen.height) : 0;
          const vvShortSide = window.visualViewport ? Math.min(window.visualViewport.width, window.visualViewport.height) : 0;
          const innerShortSide = Math.min(window.innerWidth || 0, window.innerHeight || 0);
          const candidates = [screenShortSide, vvShortSide, innerShortSide].filter((v) => v > 0);
          const shortSide = candidates.length ? Math.min(...candidates) : 0;

          const mq = (q) => {
            try {
              return typeof window.matchMedia === "function" ? window.matchMedia(q).matches : false;
            } catch {
              return false;
            }
          };

          const pointerCoarse = mq("(pointer: coarse)");
          const hoverNone = mq("(hover: none)");
          const hoverHover = mq("(hover: hover)");
          const anyPointerCoarse = mq("(any-pointer: coarse)");
          const anyHoverNone = mq("(any-hover: none)");

          const ua = navigator.userAgent || "";
          const uaTablet = /iPad|Tablet|Android(?!.*Mobile)/i.test(ua);
          const uaMobile =
            /iPhone|iPod|Android.*Mobile|Windows Phone/i.test(ua) || (navigator.userAgentData ? navigator.userAgentData.mobile : false);

          // iPadOS 在“桌面站点”下 UA 可能伪装成 Mac；常用特征：UA 含 Macintosh 且 maxTouchPoints>1
          const isIpadOs = /Macintosh/i.test(ua) && (navigator.maxTouchPoints || 0) > 1;

          const hasTouch = (navigator.maxTouchPoints || 0) > 0 || "ontouchstart" in window;
          const touchLike = hasTouch || pointerCoarse || anyPointerCoarse || hoverNone || anyHoverNone;

          // Windows / X11 基本可视为桌面环境：即便有触控，也更像“桌面 + 触屏”
          const desktopUa = /Windows NT|X11/i.test(ua);

          // 强兜底：部分浏览器在“桌面站点”下会伪装 UA/指针能力；用屏幕短边做最后保险。
          if (uaTablet || isIpadOs) device = "tablet";
          else if (uaMobile) device = "phone";
          else if (screenShortSide > 0 && screenShortSide <= 700) device = "phone";
          // 关键：触控 + 无 hover（手机/平板典型特征）在“桌面站点/大视口”下也必须走移动端节奏
          else if (touchLike && !hoverHover) device = shortSide > 0 && shortSide >= 900 ? "tablet" : "phone";
          // 兼容：UA 伪装 + hover 能力伪装的极端情况（尽量不影响 Windows 触控笔记本）
          else if (touchLike && !desktopUa && shortSide > 0 && shortSide <= 1180) device = "tablet";
        } catch {
          // ignore
        }

        try {
          el.dataset.acgDevice = device;
        } catch {
          // ignore
        }
      })();
    </script>
    <link rel="icon" type="image/svg+xml" href={href("/favicon.svg")} />
    <link rel="preconnect" href="https://images.weserv.nl" crossorigin />
    <link rel="preconnect" href="https://wsrv.nl" crossorigin />
  </head>
  <body data-current-post-id={currentPostId}>
    <header
      class="sticky top-0 z-20 border-b border-slate-900/10 bg-white/70 lg:bg-white/35 lg:backdrop-blur-xl"
      style="view-transition-name: acg-header;"
    >
      <div class="mx-auto max-w-7xl px-4 py-2 sm:py-3">
        <div class="flex items-center justify-between gap-3">
          <a href={withLang("/")} class="flex items-center gap-3">
            <span class="radar grid size-10 place-items-center shadow-sm">
              <span class="text-[10px] font-bold text-white/90">ACG</span>
            </span>
            <div class="leading-tight">
              <div class="text-sm font-semibold text-slate-950">{t(lang, "site.name")}</div>
              <div class="hidden text-xs text-slate-600 sm:block">{t(lang, "site.tagline")}</div>
            </div>
          </a>

          <nav class="acg-nav-desktop hidden items-center gap-2 lg:flex">
            {CATEGORIES.map((c) => (
              <a
                href={withLang(`/c/${c}/`)}
                aria-current={c === currentCategory ? "page" : undefined}
                class:list={[
                  "rounded-xl px-3 py-2 text-sm clickable",
                  c === currentCategory
                    ? "glass border-slate-900/20 text-slate-950 shadow-sm"
                    : "text-slate-700 hover:text-slate-950"
                ]}
              >
                {categoryLabel(lang, c)}
              </a>
            ))}
          </nav>

          <div class="flex items-center gap-1 sm:gap-2">
            <a
              href={withLang("/bookmarks/")}
              aria-current={isBookmarks ? "page" : undefined}
              class:list={[
                "hidden rounded-xl px-3 py-2 text-sm clickable sm:inline-flex",
                isBookmarks ? "glass border-slate-900/20 text-slate-950 shadow-sm" : "text-slate-700 hover:text-slate-950"
              ]}
            >
              {t(lang, "nav.bookmarks")}
            </a>
            <a
              href={withLang("/status/")}
              aria-current={isStatus ? "page" : undefined}
              class:list={[
                "hidden rounded-xl px-3 py-2 text-sm clickable sm:inline-flex",
                isStatus ? "glass border-slate-900/20 text-slate-950 shadow-sm" : "text-slate-700 hover:text-slate-950"
              ]}
            >
              {t(lang, "nav.status")}
            </a>
            <a
              href={withLang("/about/")}
              aria-current={isAbout ? "page" : undefined}
              class:list={[
                "hidden rounded-xl px-3 py-2 text-sm clickable sm:inline-flex",
                isAbout ? "glass border-slate-900/20 text-slate-950 shadow-sm" : "text-slate-700 hover:text-slate-950"
              ]}
            >
              {t(lang, "nav.about")}
            </a>
            <a
              href={langSwitchHref}
              class="glass rounded-xl px-3 py-2 text-xs font-medium text-slate-950 clickable shadow-sm sm:text-sm"
              aria-label="Switch language"
            >
              {lang === "zh" ? "日本語" : "中文"}
            </a>
          </div>
        </div>

        <nav
          class="acg-nav-mobile acg-hscroll mt-2 flex gap-2 overflow-x-auto pb-1 sm:mt-3 lg:hidden"
          aria-label="Categories"
        >
          {CATEGORIES.map((c) => (
            <a
              href={withLang(`/c/${c}/`)}
              aria-current={c === currentCategory ? "page" : undefined}
              class:list={[
                "whitespace-nowrap rounded-full px-4 py-2 text-xs clickable",
                c === currentCategory
                  ? "glass border-slate-900/20 text-slate-950 shadow-sm"
                  : "border border-slate-900/10 bg-white/45 text-slate-700 hover:bg-white/60"
              ]}
            >
              {categoryLabel(lang, c)}
            </a>
          ))}
          <a
            href={withLang("/about/")}
            aria-current={isAbout ? "page" : undefined}
            class:list={[
              "whitespace-nowrap rounded-full px-4 py-2 text-xs clickable",
              isAbout ? "glass border-slate-900/20 text-slate-950 shadow-sm" : "border border-slate-900/10 bg-white/45 text-slate-700 hover:bg-white/60"
            ]}
          >
            {t(lang, "nav.about")}
          </a>
        </nav>
      </div>
    </header>

    <main class="acg-main mx-auto max-w-7xl px-4 pt-8 pb-28 lg:py-8" style="view-transition-name: acg-main;">
      <slot />
    </main>

    <footer class="acg-footer mx-auto max-w-7xl px-4 pb-28 pt-4 text-xs text-slate-600 lg:pb-10">
      <div class="glass rounded-2xl px-4 py-3">
        <p class="m-0 leading-relaxed">{t(lang, "site.disclaimer")}</p>

        <details
          id="acg-device-debug-details"
          class="mt-3 rounded-2xl border border-slate-900/10 bg-white/45 p-3"
          hidden
        >
          <summary class="cursor-pointer select-none text-xs font-semibold text-slate-700">
            {lang === "ja" ? "デバイス情報（デバッグ）" : "设备信息（调试）"}
          </summary>
          <pre
            id="acg-device-debug"
            class="mt-2 whitespace-pre-wrap break-words font-mono text-[11px] leading-relaxed text-slate-700"
          ></pre>
        </details>
      </div>
    </footer>

    <nav class="acg-bottom-nav lg:hidden" aria-label="Primary">
      <a
        href={withLang("/")}
        class="acg-bottom-nav-item"
        data-active={isLatest ? "true" : "false"}
        aria-current={isLatest ? "page" : undefined}
      >
        <span class="acg-bottom-nav-icon" aria-hidden="true">
          <Icon name="clock" size={18} />
        </span>
        <span class="acg-bottom-nav-label">{t(lang, "nav.latest")}</span>
      </a>

      <a href={withLang("/#search")} class="acg-bottom-nav-item" data-active="false">
        <span class="acg-bottom-nav-icon" aria-hidden="true">
          <Icon name="search" size={18} />
        </span>
        <span class="acg-bottom-nav-label">{t(lang, "nav.search")}</span>
      </a>

      <a
        href={withLang("/bookmarks/")}
        class="acg-bottom-nav-item"
        data-active={isBookmarks ? "true" : "false"}
        aria-current={isBookmarks ? "page" : undefined}
      >
        <span class="acg-bottom-nav-icon" aria-hidden="true">
          <Icon name="star" size={18} filled={isBookmarks} />
        </span>
        <span class="acg-bottom-nav-label">{t(lang, "nav.bookmarks")}</span>
      </a>

      <a
        href={withLang("/status/")}
        class="acg-bottom-nav-item"
        data-active={isStatus ? "true" : "false"}
        aria-current={isStatus ? "page" : undefined}
      >
        <span class="acg-bottom-nav-icon" aria-hidden="true">
          <Icon name="chart" size={18} />
        </span>
        <span class="acg-bottom-nav-label">{t(lang, "nav.status")}</span>
      </a>

      <a
        href={withLang("/about/")}
        class="acg-bottom-nav-item"
        data-active={isAbout ? "true" : "false"}
        aria-current={isAbout ? "page" : undefined}
      >
        <span class="acg-bottom-nav-icon" aria-hidden="true">
          <Icon name="info" size={18} />
        </span>
        <span class="acg-bottom-nav-label">{t(lang, "nav.about")}</span>
      </a>
    </nav>

    <!--
      注意：不要用 `app.ts?url`。
      `.ts` 在部分静态站点（如 GitHub Pages）会被当成 video/mp2t，导致 <script type="module"> 严格 MIME 校验失败。
      这里用“可处理的内联 module script”，让 Astro/Vite 正确打包成 `.js` 并注入哈希路径。
    -->
    <script>
      import "../client/app.ts";
    </script>
  </body>
</html>
