---
import SiteLayout from "../../layouts/SiteLayout.astro";
import { href } from "../../lib/href";
import { t } from "../../i18n/i18n";
import Icon from "../../components/Icon.astro";
---

<SiteLayout lang="zh" title={t("zh", "bookmarks.title")} currentPath="/bookmarks/">
  <div class="glass rounded-2xl p-5">
    <h1 class="m-0 text-2xl font-semibold leading-tight tracking-tight text-slate-950 md:text-3xl">
      {t("zh", "bookmarks.title")}
    </h1>
    <p class="mt-2 text-sm text-slate-700">
      <span id="acg-bookmarks-count">0</span> 条
    </p>
    <div class="mt-3 flex flex-wrap gap-2">
      <button
        type="button"
        id="acg-bookmarks-export"
        class="glass rounded-xl px-4 py-2 text-xs font-medium text-slate-950 clickable"
      >
        {t("zh", "bookmarks.export")}
      </button>
      <button
        type="button"
        id="acg-bookmarks-import"
        class="glass rounded-xl px-4 py-2 text-xs font-medium text-slate-950 clickable"
      >
        {t("zh", "bookmarks.import")}
      </button>
      <button
        type="button"
        id="acg-bookmarks-clear"
        class="rounded-xl border border-rose-600/20 bg-rose-500/10 px-4 py-2 text-xs font-medium text-rose-800 clickable"
      >
        {t("zh", "bookmarks.clear")}
      </button>
      <input id="acg-bookmarks-import-file" type="file" accept="application/json" class="hidden" />
    </div>
    <p class="mt-3 text-xs text-slate-600">{t("zh", "bookmarks.hint")}</p>
    <p id="acg-bookmarks-message" class="mt-2 hidden text-xs text-slate-700"></p>
    <noscript>
      <p class="mt-2 text-sm text-slate-700">此页面需要启用 JavaScript 才能读取你的本地收藏。</p>
    </noscript>
  </div>

  <div class="mt-6" id="acg-bookmarks" hidden>
    <div id="acg-bookmarks-grid" class="grid gap-4 sm:grid-cols-2 lg:gap-5 xl:grid-cols-3 2xl:grid-cols-4">
    </div>
  </div>

  <div class="mt-6 glass shine rounded-2xl p-8" id="acg-bookmarks-empty">
    <div class="flex flex-col items-center gap-4 text-center">
      <div class="radar grid size-16 place-items-center shadow-e4">
        <Icon name="star" size={26} filled class="text-white/90" />
      </div>
      <div>
        <p class="m-0 text-sm font-medium text-slate-950">{t("zh", "bookmarks.empty")}</p>
        <p class="mt-2 text-xs leading-relaxed text-slate-600">看到喜欢的资讯，点一下右上角就能收藏。</p>
      </div>
      <a
        class="rounded-xl bg-slate-950 px-4 py-2 text-xs font-medium text-white clickable"
        href={href("/zh/")}
      >
        去逛最新
      </a>
    </div>
  </div>
</SiteLayout>
